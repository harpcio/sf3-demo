{% extends '@AceCommon/Default/layout.html.twig' %}

{% block content %}
    <div class="page-header">
        <h1>Blog show</h1>
    </div>

    <ul>
        <li>{{ blog.id }}</li>
        <li>{{ blog.name }}</li>
        <li>{{ blog.intro }}</li>
        <li>{{ blog.content }}</li>
        <li>{{ blog.createdAt|date('Y-m-d H:i:s') }}</li>
        <li>{{ blog.createdBy }}</li>
        {% if blog.events|length > 0 %}
            <li>Events:
                <ul>
                    {% for event in blog.events %}
                        <li>Name: {{ event.name }}</li>
                        <li>Intro: {{ event.intro }}</li>
                        <li>Start: {{ event.start | date('Y-m-d') }}</li>
                        <li>End: {{ event.end | date('Y-m-d') }}</li>
                        <li>Created by: {{ event.createdBy.username }}</li>
                        <li>Created at: {{ event.createdAt | date('Y-m-d H:i:s') }}</li>
                        {% if event.brochure %}
                        <li><a href="{{ asset('%brochure_uri_prefix%' ~ event.brochure) }}">View brochure (PDF)</a></li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </li>
        {% endif %}
    </ul>
{% endblock %}

