{% extends "@AceCommon/Default/layout.html.twig" %}

{% block content %}
<div class="row">
    <div>
        <div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        {{ 'Sign In'|trans }}
                    </h3>
                </div>
                <div class="panel-body">
                    <p> {{ 'Login to access your account'|trans }}.</p>
                    {% if error %}
                        <div class="alert alert-danger">{{ error | trans }}</div>
                    {% endif %}

                    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal" role="form">
                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="text" id="email" name="_username" value="{{ last_username }}" required="required" class="form-control" placeholder="{{ 'E-mail'|trans }}" />
                                <i class="fa fa-user"></i>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="{{ 'Password'|trans }}" />
                           </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="submit" class="btn btn-default btn-block" id="_submit" name="_submit" value="{{ 'Submit' | trans }}" />
                            </div>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock content %}
